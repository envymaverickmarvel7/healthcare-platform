# .env file for backend

PORT=5050

# MongoDB connection string (replace with your production DB URI)
MONGO_URI=mongodb://localhost:27017/healthcare-db

# Frontend client URL for CORS and Socket.io origin
#CLIENT_URL=http://localhost:3001

# JWT secret keys for signing tokens (use strong secrets in production)
JWT_ACCESS_SECRET=your_access_token_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Token expiration times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Optional email or notifications config, e.g. SMTP server for prescription emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_password

